<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.todo.tasks.mapper.SysTaskMapper">

    <resultMap id="SysTaskResult" type="SysTask">
        <id property="taskId" column="task_id"/>
        <result property="taskName" column="task_name"/>
        <result property="taskGroup" column="task_group"/>
        <result property="description" column="description"/>
        <result property="priority" column="priority"/>
        <result property="status" column="status"/>
        <result property="updateTime" column="update_time"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <insert id="insertTask">
        insert into sys_task(
            <if test="taskId!=null and taskId!=0">task_id</if>
            <if test="taskName!=null and taskId!=''">task_name</if>
            <if test="taskGroup!=null and taskId!=''">taskGroup</if>
            <if test="description!=null and taskId!=''">description</if>
            <if test="priority!=null and taskId!=''">priority</if>
            <if test="status!=null and taskId!=''">status</if>
            create_time
        )values(
            <if test="taskId!=null and taskId!=0">#{task_id}</if>
            <if test="taskName!=null and taskId!=''">task_name</if>
            <if test="taskGroup!=null and taskId!=''">taskGroup</if>
            <if test="description!=null and taskId!=''">description</if>
            <if test="priority!=null and taskId!=''">priority</if>
            <if test="status!=null and taskId!=''">status</if>
            sysdate()
        )
    </insert>
    <update id="updateTask">
        update sys_task
        <set>
            <if test="taskId!=null and taskId!=0">task_id=#{taskId}</if>
            <if test="taskName!=null and taskId!=''">task_name=#{taskName}</if>
            <if test="taskGroup!=null and taskId!=''">task_group=#{taskGroup}</if>
            <if test="description!=null and taskId!=''">description=#{description}</if>
            <if test="priority!=null and taskId!=''">priority=#{priority}</if>
            <if test="status!=null and taskId!=''">status=#{status}</if>
            update_time=sysdate()
        </set>
        where task_id=#{taskId}
    </update>
    <delete id="deleteTaskById">
        delete from sys_task
        where task_id=#{taskId}

    </delete>
    <select id="selectTaskList" parameterType="SysTask" resultMap="SysTaskResult">
        <where>
            <if test="taskName!=null and taskName!=''">
                AND task_name like concat('%',#{taskName},'%')
            </if>
            <if test="taskGroup!=null and taskGroup!=''">
                AND task_group = #{taskGroup}
            </if>
            <if test="status!=null and status!=''">
                AND status = #{status}
            </if>
        </where>

    </select>
</mapper>